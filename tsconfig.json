{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist", // Thêm dòng này để chỉ định thư mục output
    "rootDir": "src"  // Khuyến nghị thêm dòng này
    // "noEmit": true // Xóa hoặc comment dòng này để cho phép xuất file .js
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}